.container-fluid
  .row
    .col-md-4.col-md-offset-4
      - if user_signed_in?
      - else
        %h1.text-center Hello.
        = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
          = devise_error_messages!
          .form-group
            = f.text_field :first_name, :autofocus => true, placeholder: "First Name", :class => "form-control"
          .form-group
            = f.text_field :last_name, :autofocus => true, placeholder: "Last Name", :class => "form-control"
          .form-group
            = f.text_field :username, :autofocus => true, placeholder: "Username", :class => "form-control"
          .form-group
            = f.text_field :email, :autofocus => true, placeholder: "Email", :class => "form-control"
          .form-group
            = f.password_field :password, placeholder: "Password", :class => "form-control"
          .form-group.text-center
            = f.submit "Sign up", :class => "btn btn-lg btn-default"
